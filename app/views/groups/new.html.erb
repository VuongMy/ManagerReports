<% provide(:title, 'Create group') %>
<h1>Create group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object%>
      <%= f.label :group_name %>
      <%= f.text_field :group_name %>
      <%= f.submit "Create group", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>